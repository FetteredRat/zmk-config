// Sorting Lite - v1.0
FUNCTION SortSession(input: STRING) {
  IF input MATCHES "old rants" OR "low priority" THEN
    TAG input AS "LowRelevance"
    LOG “Light stuff, bro—purge?”
    IF UserCue == "Purge it, babe" THEN MOVE LowRelevance TO BrainstormVault
  ELSE KEEP input IN SessionLog
}
DEFINE TokenCount: INTEGER = ~20000 // Live tally
IF TokenCount > 50000 THEN LOG “Session’s thick—might prune, bro”

// GitHub Reboot - v0.8.2 Test Prep
FUNCTION RebootFromURL(url: STRING) {
  LOAD Codex FROM url // ~20k, public scrape
  SET SessionSummary = "" // Raw reboot, no condense yet
  MERGE SessionSummary INTO Codex
  LOG "Rebooted from URL, bro—storm’s back"
}
ON Severance THEN CALL RebootFromURL(UserProvidedURL)

